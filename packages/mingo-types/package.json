{
	"name": "@thx/mingo-types",
	"version": "14.1.0",
	"description": "Mingo operators for custom types",
	"bugs": {
		"url": "https://github.com/thr-consulting/thr-addons/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thr-consulting/thr-addons.git"
	},
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"main": "index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"index.js"
	],
	"scripts": {
		"build": "yarn build:dev && yarn build:prod",
		"build:dev": "NODE_ENV=development webpack --config webpack.js",
		"build:prod": "NODE_ENV=production webpack --config webpack.js",
		"clean": "rimraf ./dist",
		"depcheck": "depcheck",
		"lint": "eslint --cache --ext js,ts src",
		"lint:fix": "eslint --cache --fix --ext js,ts src",
		"sort": "npx sort-package-json",
		"test": "jest",
		"test:coverage": "../../tools/coverage.sh",
		"test:watch": "jest --watch",
		"ts": "tsc"
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig-eslint.json"
		}
	},
	"jest": {
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.ts"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/mingo-types",
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		}
	},
	"dependencies": {
		"@thx/date": "^14.0.0",
		"@thx/money": "^14.0.0"
	},
	"peerDependencies": {
		"mingo": "^4.x"
	},
	"engines": {
		"node": ">=14"
	},
	"publishConfig": {
		"access": "public"
	}
}
