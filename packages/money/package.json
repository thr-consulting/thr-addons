{
  "name": "@thx/money",
  "version": "9.0.0",
  "description": "Money utils",
  "main": "lib/money.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "money",
    "currency",
    "js-money"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run build:lib",
    "build:lib": "NODE_ENV=production webpack",
    "clean:lib": "rimraf ./lib/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "../../tools/coverage.sh money",
    "flow": "flow",
    "lint": "eslint --cache 'src/**/*.js' 'webpack.config.js'",
    "docs": "NODE_ENV=development jsdoc -c jsdoc.json",
    "docs:md": "../../tools/jsdocmd.sh money",
    "docs:explain": "NODE_ENV=development jsdoc -X -c jsdoc.json"
  },
  "peerDependencies": {
    "graphql": "^14.x"
  },
  "dependencies": {
    "accounting": "^0.4.1",
    "debug": "^4.1.1",
    "js-money": "^0.6.3",
    "lodash": "^4.17.11"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/../../tests/setupTests.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/../../tools/jest-transformer.js"
    }
  }
}
