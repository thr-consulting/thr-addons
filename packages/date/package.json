{
	"name": "@thx/date",
	"version": "11.0.0-alpha.0",
	"description": "Date utils",
	"repository": {
		"type": "git",
		"url": "https://github.com/thr-consulting/thr-addons.git"
	},
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=12"
	},
	"bugs": {
		"url": "https://github.com/thr-consulting/thr-addons/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"index.js"
	],
	"scripts": {
		"build": "yarn build:dev && yarn build:prod",
		"build:dev": "NODE_ENV=development webpack --config webpack.js",
		"build:prod": "NODE_ENV=production webpack --config webpack.js",
		"clean": "rimraf ./dist",
		"lint": "eslint --cache --ext js,ts src",
		"lint:fix": "eslint --cache --fix --ext js,ts src",
		"ts": "tsc",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh",
		"yalc:publish": "yalc publish --push",
		"prepublish": "yarn build && yarn ts"
	},
	"devDependencies": {
		"webpack-cli": "^3.3.9"
	},
	"dependencies": {
		"@js-joda/core": "^2.0.0",
		"@js-joda/locale_en-us": "^3.1.0",
		"@js-joda/timezone": "^2.2.0",
		"debug": "^4.1.1"
	},
	"jest": {
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/date",
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.ts"
		]
	}
}
