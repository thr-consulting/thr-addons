{
  "name": "@thx/router",
  "version": "3.0.2",
  "description": "React router enhancements",
  "main": "lib/index.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "react",
    "router"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run build:lib && npm run assets:lib",
    "build:lib": "babel src --out-dir lib",
    "assets:lib": "cpy src/img/* lib/img/",
    "clean:lib": "rimraf ./lib/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coverbadge -o coverage/coverage.svg",
    "flow": "flow",
    "lint": "eslint *.js src",
    "docs": "jsdoc -c jsdoc.json",
    "docs:md": "jsdoc2md -c jsdoc.json -f src/*.js > docs/README.md",
    "docs:explain": "jsdoc -X -c jsdoc.json"
  },
  "devDependencies": {
    "babel-plugin-flow-react-proptypes": "^7.0.1",
    "cpy-cli": "^1.0.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-15": "^1.0.3",
    "enzyme-to-json": "^3.1.4",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^15.6.2",
    "redux": "^3.7.2",
    "semantic-ui-react": "^0.75.1"
  },
  "peerDependencies": {
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "react-redux": "^5.0.0",
    "react-router-dom": "^4.1.0",
    "redux": "^3.7.0",
    "semantic-ui-react": "^0.75.1"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "styled-components": "^2.2.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    }
  }
}
