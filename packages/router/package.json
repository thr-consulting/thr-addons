{
  "name": "@thx/router",
  "version": "7.1.1",
  "description": "React router enhancements",
  "main": "lib/index.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "react",
    "router"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run build:lib && npm run assets:lib",
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "assets:lib": "cpy src/img/* lib/img/",
    "clean:lib": "rimraf ./lib/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coverbadge -o coverage/coverage.svg",
    "flow": "flow",
    "lint": "eslint *.js src",
    "docs": "NODE_ENV=development jsdoc -c jsdoc.json",
    "docs:md": "NODE_ENV=development jsdoc2md -c jsdoc.json --source \" \" --separators -g table --plugin dmd-clear > docs/README.md",
    "docs:explain": "NODE_ENV=development jsdoc -X -c jsdoc.json"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x",
    "react-redux": "^5.x",
    "react-router-dom": "^4.x",
    "redux": "^4.x",
    "semantic-ui-react": "^0.x"
  },
  "dependencies": {
    "debug": "^4.0.1",
    "immutable": "^3.8.2",
    "prop-types": "^15.6.2",
    "styled-components": "^3.4.9"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    }
  }
}
