{
  "name": "@thx/mongoloader",
  "version": "10.1.0",
  "description": "Mongo DataLoader class",
  "main": "lib/mongoloader.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "dataloader",
    "mongo"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run build:lib",
    "build:lib": "NODE_ENV=production webpack",
    "clean:lib": "rimraf ./lib/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "../../tools/coverage.sh mongoloader",
    "lint": "eslint --cache --ext js,ts,tsx src",
    "docs": "NODE_ENV=development jsdoc -c jsdoc.json",
    "docs:md": "../../tools/jsdocmd.sh mongoloader",
    "docs:explain": "NODE_ENV=development jsdoc -X -c jsdoc.json"
  },
  "peerDependencies": {
    "mongodb": "^3.x"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "debug": "^4.1.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "mongodb-memory-server": "^5.0.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/../../tests/setupTests.js"
    ],
    "transform": {
      "^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transformer.js"
    }
  }
}
