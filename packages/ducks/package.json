{
  "name": "@thx/ducks",
  "version": "3.0.0",
  "description": "Helpers for Redux ducks layout",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "webpack --config webpack.config.babel.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coverbadge -o coverage/coverage.svg",
    "flow": "flow",
    "lint": "eslint *.js lib",
    "docs": "jsdoc -c jsdoc.json",
    "docs:md": "jsdoc2md -c jsdoc.json -f lib/*.js > docs/README.md",
    "docs:explain": "jsdoc -X -c jsdoc.json",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/ducks.git"
  },
  "keywords": [
    "redux",
    "ducks"
  ],
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-1": "^6.24.1",
    "coverbadge": "^0.5.5",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.53.1",
    "ink-docstrap": "^1.3.0",
    "jest": "^20.0.4",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.0",
    "precommit-hook-eslint": "^3.0.0",
    "webpack": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "greenkeeper": {
    "ignore": [
      "eslint-plugin-jsx-a11y"
    ]
  },
  "pre-commit": [
    "lint",
    "flow",
    "test",
    "docs:md"
  ]
}
