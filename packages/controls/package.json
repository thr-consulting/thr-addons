{
  "name": "@thx/controls",
  "version": "12.2.0",
  "description": "A collection of components designed with SemanticUI.",
  "bugs": {
    "url": "https://github.com/thr-consulting/thr-addons/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "license": "MIT",
  "author": "Mike Kornelson <darkadept@durbn.net>",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "index.js"
  ],
  "scripts": {
    "build": "yarn build:dev && yarn build:prod",
    "build:dev": "NODE_ENV=development webpack --config webpack.js",
    "build:prod": "NODE_ENV=production webpack --config webpack.js",
    "lint": "eslint --cache --ext js,ts src",
    "lint:fix": "eslint --cache --fix --ext js,ts src",
    "sort": "npx sort-package-json",
    "storybook": "start-storybook -p 8000 --ci",
    "test": "jest",
    "test:coverage": "../../tools/coverage.sh",
    "test:watch": "jest --watch",
    "ts": "tsc"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig-eslint.json"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "<rootDir>/../../docs/assets/coverage/controls",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
    }
  },
  "dependencies": {
    "@js-joda/core": "^3.0.0",
    "@thx/date": "^11.2.0",
    "@thx/money": "^11.0.4",
    "debug": "^4.1.1",
    "eventemitter3": "^4.0.0",
    "flat": "^5.0.0",
    "formik": "^2.1.4",
    "inputmask": "^5.0.5",
    "js-money": "^0.6.3",
    "lodash": "^4.17.15",
    "react-datepicker": "^3.1.3",
    "use-deep-compare-effect": "^1.3.1",
    "yup": "^0.29.2"
  },
  "devDependencies": {
    "css-loader": "^5.0.0",
    "style-loader": "^2.0.0",
    "webpack-cli": "^3.3.9"
  },
  "peerDependencies": {
    "react": "16.x || 17.x",
    "react-dom": "16.x || 17.x",
    "semantic-ui-react": "1.x || 2.x"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "b7fd4722f916b99ce0c25fdfde7f65445343cb04"
}
