{
  "name": "@thx/controls",
  "version": "4.0.0",
  "description": "A collection of form components designed with SemanticUI. They all adhere to React Formal's policy of having a value prop and an onChange() prop.",
  "main": "lib/index.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "react",
    "controls",
    "semantic-ui"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run build:lib",
    "build:lib": "babel src --out-dir lib",
    "clean:lib": "rimraf ./lib/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coverbadge -o coverage/coverage.svg",
    "flow": "flow",
    "lint": "eslint *.js src",
    "docs": "jsdoc -c jsdoc.json",
    "docs:md": "jsdoc2md -c jsdoc.json -f src/*.js > docs/README.md",
    "docs:explain": "jsdoc -X -c jsdoc.json"
  },
  "devDependencies": {
    "babel-plugin-flow-react-proptypes": "^18.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-formal": "^0.25.4",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "semantic-ui-react": "^0.78.2"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-formal": "^0.25.4",
    "semantic-ui-react": "^0.78.0"
  },
  "dependencies": {
    "@thx/tschemas": "^4.0.0",
    "debug": "^3.1.0",
    "inputmask": "^3.3.11",
    "prop-types": "^15.6.0",
    "react-input-message": "^0.15.1",
    "react-responsive": "^4.0.4",
    "string-hash": "^1.1.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
