{
	"name": "@thx/controls",
	"version": "12.0.2",
	"description": "A collection of components designed with SemanticUI.",
	"repository": {
		"type": "git",
		"url": "https://github.com/thr-consulting/thr-addons.git"
	},
	"license": "MIT",
	"author": "Mike Kornelson <darkadept@durbn.net>",
	"engines": {
		"node": ">=12"
	},
	"bugs": {
		"url": "https://github.com/thr-consulting/thr-addons/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"index.js"
	],
	"scripts": {
		"build": "yarn build:dev && yarn build:prod",
		"build:dev": "NODE_ENV=development webpack --config webpack.js",
		"build:prod": "NODE_ENV=production webpack --config webpack.js",
		"lint": "eslint --cache --ext js,ts src",
		"lint:fix": "eslint --cache --fix --ext js,ts src",
		"ts": "tsc",
		"yalc:publish": "yalc publish --push",
		"prepublish": "yarn build && yarn ts",
		"storybook": "start-storybook -p 8000 --ci",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "../../tools/coverage.sh"
	},
	"devDependencies": {
		"webpack-cli": "^3.3.9"
	},
	"peerDependencies": {
		"react": "^16.x",
		"react-dom": "^16.x",
		"semantic-ui-react": "^0.x"
	},
	"dependencies": {
		"@js-joda/core": "^2.0.0",
		"@thx/date": "^11.0.0",
		"@thx/money": "^11.0.1",
		"debug": "^4.1.1",
		"eventemitter3": "^4.0.0",
		"flat": "^5.0.0",
		"formik": "^2.1.2",
		"inputmask": "^4.0.9",
		"js-money": "^0.6.3",
		"lodash": "^4.17.15",
		"react-datepicker": "^2.11.0",
		"use-deep-compare-effect": "^1.3.0",
		"yup": "^0.28.0"
	},
	"jest": {
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/../../tools/jest-transform-server.js"
		},
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"coverageDirectory": "<rootDir>/../../docs/assets/coverage/controls",
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.js",
			"<rootDir>/src/**/*.ts"
		]
	}
}
