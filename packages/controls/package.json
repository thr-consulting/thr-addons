{
  "name": "@thx/controls",
  "version": "9.0.0",
  "description": "A collection of components designed with SemanticUI.",
  "main": "lib/index.js",
  "author": "Mike Kornelson <mike@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "keywords": [
    "react",
    "controls",
    "semantic-ui"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean:lib && npm run clean:dist && npm run build:lib && npm run build:dist && npm run assets:dist",
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "build:dist": "NODE_ENV=production webpack",
    "clean:lib": "rimraf ./lib/*",
    "clean:dist": "rimraf ./dist/*",
    "assets:dist": "rimraf ./dist/*.js && cpy dist/*.css lib/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "../../tools/coverage.sh controls",
    "flow": "flow",
    "lint": "eslint src --ext .js",
    "docs": "NODE_ENV=development jsdoc -c jsdoc.json",
    "docs:md": "../../tools/jsdocmd.sh controls",
    "docs:explain": "NODE_ENV=development jsdoc -X -c jsdoc.json",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "docs:storybook": "../../tools/storybook.sh controls"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x",
    "react-formal": "0.25.4",
    "semantic-ui-react": "^0.x"
  },
  "dependencies": {
    "@thx/date": "^9.0.0",
    "@thx/money": "^9.0.0",
    "@thx/tproptypes": "^9.0.0",
    "@thx/tschemas": "^9.0.0",
    "debug": "^4.0.1",
    "formik": "^1.3.0",
    "inputmask": "^4.0.0",
    "js-joda": "^1.9.2",
    "js-money": "^0.6.3",
    "moment": "^2.22.2",
    "prop-types": "^15.6.0",
    "react-datepicker": "^2.0.0",
    "react-input-message": "^0.15.1",
    "react-responsive": "^6.0.1",
    "react-text-mask": "^5.4.1",
    "react-widgets": "^4.3.2",
    "react-widgets-moment": "^4.0.15",
    "string-hash": "^1.1.3",
    "text-mask-addons": "^3.7.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  }
}
