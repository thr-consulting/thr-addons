{
  "author": "Mike Kornelson <darkadept@durbn.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thr-consulting/thr-addons.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream --concurrency 1",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap && npm run build",
    "pkghash": "./tools/pkghash",
    "docs:storybook": "lerna run docs:storybook",
    "docs": "lerna run docs",
    "docs:md": "lerna run docs:md",
    "validate": "npm ls",
    "ready:commit": "yarn test:coverage && yarn docs && yarn docs:md && yarn docs:storybook && yarn full:docs && yarn full:docs:md"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@imperium/babel-preset-imperium": "^1.0.0",
    "@imperium/dev-deps": "^1.0.0",
    "@imperium/eslint-config-imperium": "^1.0.0",
    "eslint": "^5.15.3",
    "identity-obj-proxy": "^3.0.0",
    "jest-mock-random": "^1.0.2",
    "lerna": "^3.13.1",
    "mongodb": "^3.1.13",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "4.3.1",
    "semantic-ui-react": "^0.86.0",
    "semver": "^5.5.1"
  },
  "optionalDependencies": {
    "fsevents": "2.0.1"
  }
}
